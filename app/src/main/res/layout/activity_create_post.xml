<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activities.CreatePostActivity">

    <EditText
        android:id="@+id/user_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="User ID:"
        android:padding="@dimen/text_margin"/>

    <EditText
        android:id="@+id/post_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Post Title:"
        android:padding="@dimen/text_margin"
        app:layout_constraintTop_toBottomOf="@id/user_id_edit_text" />

    <EditText
        android:id="@+id/post_body_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Post Body:"
        android:padding="@dimen/text_margin"
        app:layout_constraintTop_toBottomOf="@id/post_title_edit_text" />

    <Button
        android:id="@+id/create_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Post"
        app:layout_constraintTop_toBottomOf="@id/post_body_edit_text" />

</android.support.constraint.ConstraintLayout>